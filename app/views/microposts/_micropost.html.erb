<li id="micropost-<%= micropost.id %>">
  <div class="row">
    <div class="col-md-2"><%= link_to gravatar_for(micropost.user), micropost.user %></div>
    <div class="col-md-10">
      <span class="user"><%= link_to micropost.user.name, micropost.user %></span></br>
      <span class="content">
      <%= micropost.content %></br>
      <%= image_tag micropost.picture.url if micropost.picture? %>
      </span></br>
      <span class="timestamp">
        <%= t ".intro1" %> <%= time_ago_in_words(micropost.created_at) %> <%= t ".intro2" %>
        <% if admin_or_your_micropost?(micropost.user) %>
          |<%= link_to t(".delete"), micropost, method: :delete,
                                          data: { confirm: I18n.t("notification.request_sure") } %>
        <% end %>
        <% if current_user?(micropost.user) %>
          |<%= link_to t(".update"), edit_micropost_path(id: micropost.id) %>
        <% end %>
      </span>
    </div>
  </div>
</li>
